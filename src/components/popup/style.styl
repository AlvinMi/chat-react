//popup-components
.popup-wrapper
  width 100%
  height 100%
  position fixed
  left 0px
  top 0px
  z-index 1500
  .popup-box
    z-index 1600
.popup-mask
  background-color rgba(0,0,0,0.8)
  width 100%
  height 100%
  left 0px
  top 0px
.popup-animate-show
  animation-name: fadeInUp;
  animation-duration: 0.4s;
  animation-fill-mode: both;
@keyframes fadeInUp {
  from {
    opacity: .8;
    transform: translate3d(0, 100%, 0);
  }

  to {
    opacity: 1;
    transform: none;
  }
}
.popup-animate-hide
  animation-name: fadeOutDown;
  animation-duration: 0.4s;
  animation-fill-mode: both;
@keyframes fadeOutDown {
  0% {
    opacity: 1;
  }

  100% {
    opacity: 0.8;
    transform: translate3d(0, 100%, 0);
  }
}
.mask-show
  animation-name: fadeIn;
  animation-duration: 0.3s;
  animation-fill-mode: both;
@keyframes fadeIn {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}
.mask-hide
  animation-name: fadeOut;
  animation-duration: 0.5s;
  animation-fill-mode: both;
@keyframes fadeOut {
  0% {
    opacity: 1;
  }

  100% {
    opacity: 0;
  }
}
